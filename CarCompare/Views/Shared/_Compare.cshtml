@model CarCompare.Models.CompareModel

@if (Model != null && Model.Cars.Any())
{
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
            <thead class="bg-gray-100">
                <tr>
                    <th class="py-3 px-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Make</th>
                    <th class="py-3 px-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Model</th>
                    <th class="py-3 px-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Year</th>
                    <th class="py-3 px-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Price (MXN)</th>
                    <th class="py-3 px-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Engine Specs</th>
                    <th class="py-3 px-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Fuel Efficiency (km/l)</th>
                    <th class="py-3 px-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Safety Features</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach (var car in Model.Cars)
                {
                    <tr>
                        <td class="py-3 px-4 whitespace-nowrap">@car.Make</td>
                        <td class="py-3 px-4 whitespace-nowrap">@car.Model</td>
                        <td class="py-3 px-4 whitespace-nowrap">@car.Year</td>
                        <td class="py-3 px-4 whitespace-nowrap">@car.PriceMxn</td>
                        <td class="py-3 px-4 whitespace-nowrap">@car.EngineSpecs?.Type</td>
                        <td class="py-3 px-4 whitespace-nowrap">@car.FuelEfficiencyKml?.Combined</td>
                        <td class="py-3 px-4">@string.Join(", ", car.SafetyFeatures ?? new List<string>())</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
