<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarCompare</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="bg-white shadow-md py-4">
            <div class="container mx-auto flex justify-between items-center">
                <a class="text-xl font-bold text-gray-800" asp-area="" asp-controller="Home" asp-action="Index">CarCompare</a>
                <div class="flex space-x-4">
                    <a class="text-gray-600 hover:text-gray-900" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="text-gray-600 hover:text-gray-900" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mx-auto px-4 py-8">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t mt-8 pt-4 pb-8 text-center text-gray-600">
        <div class="container mx-auto">
            &copy; 2025 - CarCompare - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
